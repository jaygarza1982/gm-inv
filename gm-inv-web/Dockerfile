FROM node:14-alpine

WORKDIR /app

#Add /app/node_modules/.bin to $PATH
ENV PATH /app/node_modules/.bin:$PATH

#Install app dependencies
COPY package.json ./
COPY package-lock.json ./
RUN npm install --silent
RUN npm install react-scripts@3.4.1 -g --silent

#Add app code to image
COPY . ./

#Start app
CMD ["npm", "start"]